<UserControl x:Class="MyRightCareer.TopBanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="250" d:DesignWidth="1000">

    <Grid Name="LayoutRoot" Background="Blue">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        
        <Grid Name="MenuBar" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="End" Grid.Column="0"/>
            <Button Content="Self" Grid.Column="1"/>
            <Button Content="Past" Grid.Column="2"/>
            <Button Content="Strength" Grid.Column="3"/>
            <Button Content="Meaning" Grid.Column="4"/>
        </Grid>
    </Grid>
</UserControl>
